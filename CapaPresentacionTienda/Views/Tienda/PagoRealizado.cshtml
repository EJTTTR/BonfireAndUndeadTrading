
@{
    ViewBag.Title = "PagoRealizado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-3"></div>

<div class="row">

    <div class="col-sm-12 text-center">
        <br />
        <br />

        @{
            if ((bool)ViewData["Status"])
            {
                <h1 class="text-success">Gracias! por su compra</h1>
                <i class="far fa-check-circle fa-9x text-success"></i>

                <h2 class="text-success"> Su pago fue realizado con exito!</h2>
                <h4>ID de la transacción: @ViewData["IdTransaccion"]</h4>

                <br />
                <a href="@Url.Action("Index", "Tienda")" class="btn btn-outline-primary">Volver a la hoguera</a>
            }
            else
            {
                <h1 class="text-danger">Lo sentimos!</h1>
                <i class="fas fa-exclamation-circle fa-9x text-danger"></i>

                <h2 class="text-danger"> Su pago no pudo ser completado</h2>
                <h4>ID de la transacción: @ViewData["IdTransaccion"]</h4>

                <br />
                <a href="@Url.Action("Index", "Tienda")" class="btn btn-outline-primary">Volver a la hoguera</a>
            }
        }

    </div>

</div>
