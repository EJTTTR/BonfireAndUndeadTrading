
@{
    Layout = null;
    int year = DateTime.Now.Year;
}

<!DOCTYPE html>

<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Cambio de contraseña - Bonfire & Undead Trading</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .small a {
            color: white;
            text-decoration: none;
        }

            .small a:hover {
                color: #fd9832;
                text-decoration: underline;
            }
    </style>
</head>
<body class="bg-secondary bg-gradient">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-3">
                                <div class="card-header bg-dark"><h3 class="text-center font-weight-light text-light my-4">Cambiar contraseña</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("CambiarContra", "Acceso")" method="post">
                                        <input class="form-control" type="hidden" value="@Session["IdCliente"]" name="idCliente" />

                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPassword" type="password" name="contraActual" value="@ViewData["vClave"]" required placeholder="." />
                                                    <label for="inputPassword">Contraseña actual</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPassword" type="password" name="nuevaContra" required placeholder="." />
                                                    <label for="inputPassword">Nueva contraseña</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    <input class="form-control" id="inputPasswordConfirm" type="password" name="confirmarContra" required placeholder="." />
                                                    <label for="inputPasswordConfirm">Confirmar nueva contraseña</label>
                                                </div>
                                            </div>
                                        </div>

                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="row mb-3">
                                                    <div class="col-md-12">
                                                        <div class="alert alert-danger" role="alert">
                                                            @ViewBag.Error
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }

                                        <div class="mt-2 mb-2">
                                            <div class="d-grid"><button type="submit" class="btn btn-outline-primary btn-block">Cambiar contraseña</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center bg-dark py-3">
                                    <div class="small"><a href="@Url.Action("Index", "Acceso")"><i class="fas fa-arrow-left"></i> Volver</a></div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 mt-auto bg-dark">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-center small">
                        <div class="text-light">Copyright &copy; Bonfire & Undead Trading @year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
