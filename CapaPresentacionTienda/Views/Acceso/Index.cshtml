
@{
    Layout = null;
    int year = DateTime.Now.Year;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Iniciar sesión - Bonfire & Undead Trading</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
            .small {
                text-decoration: none;
            }
            .small:hover {
                color: #fd9832;
                text-decoration: underline;
            }
            .small a {
                color: #0d6efd;
                text-decoration: none;
            }
            .small a:hover {
                color: #fd9832;
                text-decoration: underline;
            }
    </style>
</head>
<body class="bg-secondary bg-gradient">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header bg-dark"><h3 class="text-center font-weight-light text-light my-4">Acceso</h3></div>
                                <div class="card-body">
                                    <form action="@Url.Action("Index", "Acceso")" method="post">

                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="correo" type="email" autocomplete="on" required placeholder="name@example.com" />
                                            <label for="inputEmail">Correo</label>
                                        </div>

                                        <div class="form-floating mb-3">
                                            <input class="form-control" name="contra" type="password" autocomplete="off" required placeholder="Password" />
                                            <label for="inputPassword">Contraseña</label>
                                        </div>

                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="form-floating mb-3">
                                                    <div class="alert alert-danger" role="alert">
                                                        @ViewBag.Error
                                                    </div>
                                                </div>
                                            }
                                        }

                                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                            <a class="small" href="@Url.Action("Restablecer", "Acceso")"><i class="fas fa-unlock-alt"></i> ¿Ha olvidado su contraseña?</a>
                                            <button type="submit" class="btn btn-outline-primary">Iniciar sesión</button>
                                        </div>

                                    </form>
                                </div>
                                <div class="card-footer text-center py-3 bg-dark">
                                    <div class="small"><a href="@Url.Action("Registrar", "Acceso")"><i class="fas fa-user-plus"></i>¿Necesitas una cuenta? ¡Regístrate!</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">
            <footer class="py-4 mt-auto bg-dark">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-center small">
                        <div class="text-light">Copyright &copy; Bonfire & Undead Trading @year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
