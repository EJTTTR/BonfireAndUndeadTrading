@model CapaEntidad.Cliente
@{
    Layout = null;
    int year = DateTime.Now.Year;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Registrarse - Bonfire & Undead Trading</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon">
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        .small a {
            color: #0d6efd;
            text-decoration: none;
        }

            .small a:hover {
                color: #fd9832;
                text-decoration: underline;
            }
    </style>
</head>
<body class="bg-secondary bg-gradient">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-7">
                            <div class="card shadow-lg border-0 rounded-lg mt-3">
                                <div class="card-header bg-dark"><h3 class="text-center font-weight-light text-light my-2">Crear una cuenta</h3></div>
                                <div class="card-body">

                                    <form action="@Url.Action("Registrar", "Acceso")" method="post">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", @id = "txtNombre", @placeholder = ".", value = ViewData["Nombre"], required = "required" })
                                                    @Html.Label("txtNombre", "Nombre")
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating">
                                                    @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control", @id = "txtApellido", @placeholder = ".", value = ViewData["Apellido"], required = "required" })
                                                    @Html.Label("txtApellido", "Apellido")
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-floating mb-3">
                                            @Html.TextBoxFor(m => m.Correo, new { @class = "form-control", @id = "txtCorreo", @placeholder = ".", type = "email", value = ViewData["Correo"], required = "required" })
                                            @Html.Label("txtCorreo", "Correo")
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <div class="form-floating mb-3 mb-md-0">
                                                    @Html.PasswordFor(m => m.Clave, new { @class = "form-control", @id = "txtClave", @placeholder = ".", required = "required" })
                                                    @Html.Label("txtClave", "Contraseña")
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-floating mb-1 mb-md-0">
                                                    @Html.PasswordFor(m => m.ConfirmarClave, new { @class = "form-control", @id = "txtConfirmarClave", @placeholder = ".", required = "required" })
                                                    @Html.Label("txtConfirmarClave", "Confirmar contraseña")
                                                </div>
                                            </div>
                                        </div>

                                        @{
                                            if (ViewBag.Error != null)
                                            {
                                                <div class="row mb-0 mt-2">
                                                    <div class="col-md-12">
                                                        <div class="alert alert-danger" role="alert">
                                                            @ViewBag.Error
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }

                                        <div class="mt-1 mb-0">
                                            <div class="d-grid"><button class="btn btn-outline-primary btn-block" type="submit">Crear Cuenta</button></div>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3 bg-dark">
                                    <div class="small"><a href="@Url.Action("Index", "Acceso")"><i class="fas fa-sign-in-alt"></i> ¿Ya tienes una cuenta? Inicia sesión</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer" class="mt-2">
            <footer class="py-2 mt-auto bg-dark">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-center small">
                        <div class="text-light">Copyright &copy; Bonfire & Undead Trading @year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
